<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/HeaderStylePage.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="logo">
                <h4>Фитнес-центр</h4>
                <h1>Спарта</h1>
            </div>
            
            <div class="contacts">
                <h4>ул. Сумская, 18/20, тел. +38(098)111-12-22, +38(057)666-14-88</h4>
                <ul class="social">
                    <li><a id="vk" href="#">Vk</a></li>
                    <li><a id="fb" href="#">Facebook</a></li>
                    <li><a id="tw" href="#">Twitter</a></li>
                    <li><a id="go" href="#">Google</a></li>
                    <li><a id="ok" href="#">Odnoklassniki</a></li>
                    <li><a id="insta" href="#">Instagram</a></li>
                </ul>             
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
