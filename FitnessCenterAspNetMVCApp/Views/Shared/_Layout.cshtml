<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">
                        
                    </span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Фитнес-центр</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="http://localhost:31785/Service/ServiceView">Услуги</a>                   
                    </li>
                    <li>
                        <a href="http://localhost:31785/Coach/CoachView">Тренеры</a>
                    </li>
                    <li>
                        <a href="http://localhost:31785/AddNewAbonement/AddNewAbonementView">Абонемент</a>                
                    </li>
                    <li>
                        <a href="http://localhost:31785/Timetable/TimetableView">Расписание</a>
                    </li>
                    <li>
                        <a href="http://localhost:31785/Home/About">Статьи</a>                   
                    </li>
                    <li>
                        <a href="http://localhost:31785/Feedback/ShowFeedback">Отзывы</a>                  
                    </li>
                </ul>
                <span id="doc_time"></span>
            </div>
        </div>
        
    </div>
    <div class="container body-content">

        <div id="myCarousel" class="carousel slide" data-ride="carousel" >
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item info active">
                    <ul class="">
                        <li>
                            <div><img src="~/Images/Content/lady.jpg" /></div>
                        </li>
                        <li>
                            <div><img src="~/Images/Content/about_us.jpg" /></div>
                        </li>
                        <li>
                            <div><img src="~/Images/Content/man.jpg" /></div>
                        </li>
                    </ul>
                </div>

                <div class="item info">
                    <div>
                        <img src="~/Images/Content/tennisistka.jpg" />
                    </div>
                </div>

                <div class="item info">
                    <div>
                        <img src="~/Images/Content/fight.jpg" />
                    </div>
                </div>

                <div class="item info">
                    <div class="contacts">
                        <p id="contacts_title">Контакты</p>
                             <div class="contacts_first">
                                 <p>ул. Сумская, 18/20, тел. +38(098)111-22-33</p>
                             </div>
                             <div class="contacts_second">
                                 <p>Мы в социальных сетях</p>
                                 <ul class="social">
                                     <li>
                                         <a href="https://vk.com/" id="vk" target="_blank">Vk</a>
                                     </li>
                                     <li>
                                         <a href="https://www.facebook.com/" id="fb" target="_blank">Facebook</a>
                                     </li>
                                     <li>
                                         <a href="https://twitter.com/" id="tw" target="_blank">Twitter</a>
                                     </li>
                                     <li>
                                         <a href="https://ok.ru/" id="ok" target="_blank">Odnoklassniki</a>
                                     </li>
                                     <li>
                                         <a href="https://www.google.com.ua" id="go" target="_blank">Google</a>
                                     </li>
                                     <li>
                                         <a href="https://www.instagram.com" id="insta" target="_blank">Instagram</a>
                                     </li>
                                 </ul>
                             </div>                          
                    </div>
                </div>      
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a> 
        </div>

        @RenderBody()
               
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
